<h1>Modifier la tâche</h1>

<%= form_with model: [@project, @task], local: true do |form| %>
  <div>
    <%= form.label :name, "Nom de la tâche" %>
    <%= form.text_field :name, class: "border p-2" %>
  </div>

  <div>
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, class: "border p-2" %>
  </div>

  <div>
    <%= form.label :status, "Statut" %>
    <%= form.select :status, ['todo', 'in_progress', 'done'], class: "border p-2" %>
  </div>

  <!-- Nouveau champ pour modifier la date d'échéance -->
  <div>
    <%= form.label :time_task, "Échéance de la tâche" %>
    <%= form.datetime_select :time_task, class: "border p-2" %>
  </div>

  <div class="mt-4">
    <%= form.submit "Enregistrer les modifications", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
  </div>
<% end %>
